              <div class='plan_tag-content'>
                <div class='text-size-regular text-weight-semibold'>Beyond</div>
              </div>
              <div class='plan_tag-line is-bottom'></div>
            </div>
            <div data-figma-id='8907:32786' class='plan_card-wrapper is-beyond'>
              <div data-figma-id='8907:32787' class='plan_card-content'>
                <div data-figma-id='8907:32788' class='plan_card-header'>
                  <h3 data-figma-id='8907:32789' class='text-size-large is-plan'>Lock It In for Life</h3>
                  <p data-figma-id='8907:32790' class='text-size-regular'>
                    With such a solid foundation you shape your own
                    <strong>Personal Code</strong>
                    that carries your discipline far beyond the challenge.
                  </p>
                </div>
                <img
                  src={{ 'sword-beyond.webp' | asset_url }}
                  loading='lazy'
                  alt="{{ section.settings.alt_sword_beyond }}"
                  class='sword-asset is-beyond'>
              </div>
            </div>
          </div>
        </div>
        <div class='plan_mountain-wrapper'>
          <img
            src="{{ 'mountain-x1.webp' | asset_url }}"
            loading="lazy"
            sizes="100vw"
            srcset="
    {{ 'mountain-x1-p-500.webp' | asset_url }} 500w,
    {{ 'mountain-x1-p-800.webp' | asset_url }} 800w,
    {{ 'mountain-x1-p-1080.webp' | asset_url }} 1080w,
    {{ 'mountain-x1.webp' | asset_url }} 1222w
  "
            alt="{{ section.settings.alt_mountain_x1 }}"
            class="plan_mountain-asset" />
        </div>
