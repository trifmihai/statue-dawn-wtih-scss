            <div class='plan_tag'>
              <div class='plan_tag-line is-top'></div>
              <div class='plan_tag-content'>
                <div class='text-size-regular text-weight-semibold'>Week 1</div>
              </div>
              <div class='plan_tag-line is-bottom'></div>
            </div>
            <div data-figma-id='8907:32786' class='plan_card-wrapper'>
              <div data-figma-id='8907:32787' class='plan_card-content'>
                <div data-figma-id='8907:32788' class='plan_card-header'>
                  <h3 data-figma-id='8907:32789' class='text-size-large is-plan'>Feel Discipline Forming</h3>
                  <p data-figma-id='8907:32790' class='text-size-regular'>
                    You
                    <strong>stack wins</strong>
                    and start feeling in control with
                    <strong>short 5-minute daily actions</strong>
                    designed to fit around your schedule.
                  </p>
                </div>
                <img
                  src={{ 'sword-week-1.webp' | asset_url }}
